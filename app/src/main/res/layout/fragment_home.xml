<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".HomeFragment"
    >

    <!-- Yes/No Button -->

    <!-- Dots under Yes/No Button -->

    <Button
        android:id="@+id/yes_no_button"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="Yes/No"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/yes_no_button"
        app:layout_constraintStart_toStartOf="@id/yes_no_button"
        app:layout_constraintEnd_toEndOf="@id/yes_no_button"
        android:layout_marginTop="8dp" />

    <!-- Needs Button -->

    <!-- Dots under Needs Button -->

    <Button
        android:id="@+id/needs_button"
        android:layout_width="182dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="Needs"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:onClick="openNeeds"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yes_no_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/needs_button"
        app:layout_constraintStart_toStartOf="@id/needs_button"
        app:layout_constraintEnd_toEndOf="@id/needs_button"
        android:layout_marginTop="8dp" />

    <!-- Greetings Button -->

    <!-- Dots under Greetings Button -->

    <Button
        android:id="@+id/greetings_button"
        android:layout_width="182dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="Greetings"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yes_no_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/greetings_button"
        app:layout_constraintStart_toStartOf="@id/greetings_button"
        app:layout_constraintEnd_toEndOf="@id/greetings_button"
        android:layout_marginTop="8dp" />

    <!-- Emotions Button -->

    <!-- Dots under Emotions Button -->

    <Button
        android:id="@+id/emotions_button"
        android:layout_width="182dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="Emotions"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/needs_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/emotions_button"
        app:layout_constraintStart_toStartOf="@id/emotions_button"
        app:layout_constraintEnd_toEndOf="@id/emotions_button"
        android:layout_marginTop="8dp" />

    <!-- Health Button -->

    <!-- Dots under Health Button -->

    <Button
        android:id="@+id/health_button"
        android:layout_width="182dp"
        android:layout_height="130dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="Health"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetings_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/health_button"
        app:layout_constraintStart_toStartOf="@id/health_button"
        app:layout_constraintEnd_toEndOf="@id/health_button"
        android:layout_marginTop="8dp" />

    <!-- Commands Button -->

    <!-- Dots under Commands Button -->

    <Button
        android:id="@+id/commands_button"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="Commands"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emotions_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ● ● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/commands_button"
        app:layout_constraintStart_toStartOf="@id/commands_button"
        app:layout_constraintEnd_toEndOf="@id/commands_button"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>