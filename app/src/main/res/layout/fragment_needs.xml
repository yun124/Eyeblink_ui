<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".NeedsFragment"
    >

    <!-- TODO: back button -->


    <TextView
        android:id="@+id/selected_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Select a phrase..."
        android:textColor="#908F8F"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




    <Button
        android:id="@+id/button1"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="I am thirsty"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selected_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintEnd_toEndOf="@id/button1"
        android:layout_marginTop="8dp" />




    <Button
        android:id="@+id/button2"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="I am hungry"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selected_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/button2"
        app:layout_constraintEnd_toEndOf="@id/button2"
        android:layout_marginTop="8dp" />



    <Button
        android:id="@+id/button3"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="I need the bathroom"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="@id/button3"
        app:layout_constraintEnd_toEndOf="@id/button3"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/button4"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="I'm cold"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/button4"
        app:layout_constraintEnd_toEndOf="@id/button4"
        android:layout_marginTop="8dp" />



    <Button
        android:id="@+id/button5"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="I'm hot"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toStartOf="@id/button5"
        app:layout_constraintEnd_toEndOf="@id/button5"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/button6"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box"
        android:fontFamily="@font/roboto_bold"
        android:text="I am tired"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ● ● ● ● ●"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintStart_toStartOf="@id/button6"
        app:layout_constraintEnd_toEndOf="@id/button6"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>